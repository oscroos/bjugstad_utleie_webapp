generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

generator client_functions {
  provider      = "prisma-client-js"
  output        = "../azure/function/node_modules/.prisma/client"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GlobalRole {
  super_admin
  customer
}

enum CompanyRole {
  admin
  user
}

model User {
  id                   String       @id @default(cuid())
  phone                String?      @unique
  name                 String?
  email                String?      @unique
  emailVerified        DateTime?    @map("email_verified")
  address_street       String?
  address_postal_code  String?
  address_region       String?
  role                 GlobalRole   @default(customer)
  acceptedTerms        Boolean      @default(false) @map("accepted_terms")
  acceptedTermsAt      DateTime?    @map("accepted_terms_at")
  acceptedTermsVersion String?      @map("accepted_terms_version")
  createdAt            DateTime     @default(now()) @map("created_at")
  updatedAt            DateTime     @updatedAt @map("updated_at")
  firstLoginAt         DateTime?    @map("first_login_at")
  lastLoginAt          DateTime?    @map("last_login_at")

  accounts             Account[]
  sessions             Session[]
  accesses             UserCustomerAccess[]
  loginEvents          UserLoginEvent[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Machine {
  id                String    @id
  name              String?
  oemName           String?   @map("oem_name")
  firstSeen         DateTime  @default(now()) @map("first_seen")
  lastUpdated       DateTime  @default(now()) @updatedAt @map("last_updated")
  lastPosReportedAt DateTime? @map("last_pos_reported_at")
  lastPosLatitude   Float?    @map("last_pos_latitude")
  lastPosLongitude  Float?    @map("last_pos_longitude")

  @@index([lastUpdated(sort: Desc)], map: "idx_machines_last_updated")
  @@index([lastPosReportedAt(sort: Desc)], map: "idx_machines_last_pos_reported_at")
  @@map("machines")
}

model Customer {
  customer_id         Int                    @id
  name                String?
  email               String?
  address             String?
  postal_code         String?
  city                String?
  contact             String?
  telephone_number    String?
  phone_normalized    String?
  organization_number String?
  customer_number     Int?
  contactPersons      CustomerContactPerson[]
  accesses            UserCustomerAccess[]

  @@map("customers")
}

model CustomerContactPerson {
  customer_id       Int
  contact_person_id Int
  name              String?
  telephone_number  String?
  email             String?
  phone_normalized  String?
  customer          Customer @relation(fields: [customer_id], references: [customer_id], onDelete: Cascade)

  @@id([customer_id, contact_person_id])
  @@map("customer_contact_persons")
}

model UserCustomerAccess {
  userId     String       @map("user_id")
  customerId Int          @map("customer_id")
  role       CompanyRole

  user       User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  customer   Customer     @relation(fields: [customerId], references: [customer_id], onDelete: Cascade)

  @@id([userId, customerId])
  @@map("user_customer_accesses")
}

model UserLoginEvent {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  provider  String?
  loggedAt  DateTime @default(now()) @map("logged_at")

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([loggedAt], map: "idx_user_login_events_logged_at")
  @@map("user_login_events")
}
